{
  "name": "architex-axis-management-suite",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "test": "jest --runInBand",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --runInBand tests/integration",
    "test:watch": "jest --watch",
    "test:debug": "jest --runInBand --no-cache --verbose",
    "test:e2e": "playwright test",
    "test:e2e-debug": "playwright test --debug",
    "test:all": "npm run test && npm run test:e2e",
    "debug:backend": "php -S localhost:8000 -t backend",
    "debug:integration": "node --inspect-brk=9229 node_modules/.bin/jest --runInBand tests/integration"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^7.6.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.27.2",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@playwright/test": "^1.53.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.14.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.5.2",
    "autoprefixer": "^10.4.21",
    "babel-jest": "^30.0.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^30.0.0",
    "jest-environment-jsdom": "^30.0.0",
    "jest-fetch-mock": "^3.0.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "ts-jest": "^29.4.0",
    "typescript": "~5.7.2",
    "vite": "^6.2.0"
  }
}
